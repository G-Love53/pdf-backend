<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Workers’ Compensation – Bar/Tavern</title>
  <style><%= styles %></style>
</head>
<body>
  <!-- PAGE 1 -->
  <div class="page">
    <div class="headerbar">
      <div class="acord">CID</div>
      <div class="title">WORKERS’ COMPENSATION</div>
      <div class="formno">WC</div>
    </div>

    <!-- Applicant -->
    <div class="subbar">APPLICANT</div>
    <div class="block">
      <div class="row">
        <div class="cell label w25">BUSINESS NAME</div>
        <div class="cell w75"><%= data.applicant_name || "" %></div>
      </div>
      <div class="row">
        <div class="cell label w25">PHONE</div>
        <div class="cell w25"><%= data.business_phone || "" %></div>
        <div class="cell label w25">EMAIL</div>
        <div class="cell w25"><%= data.contact_email || "" %></div>
      </div>
      <div class="row">
        <div class="cell label w25">WEBSITE</div>
        <div class="cell w75"><%= data.premises_website || "" %></div>
      </div>
    </div>

    <!-- Location -->
    <div class="subbar">LOCATION</div>
    <div class="block">
      <div class="row">
        <div class="cell label w25">ADDRESS</div>
        <div class="cell w75">
          <%= [
            data.premise_address,
            [data.premise_city, data.premise_state, data.premise_zip].filter(Boolean).join(", ")
          ].filter(Boolean).join(", ") %>
        </div>
      </div>
    </div>

    <!-- Classification -->
    <div class="subbar">CLASSIFICATION</div>
    <div class="block">
      <div class="row">
        <div class="cell label w25">BAR / TAVERN</div>
        <div class="cell w25"><%= data.wc_bar_tavern || "" %></div>
        <div class="cell label w25">RESTAURANT</div>
        <div class="cell w25"><%= data.wc_restaurant || "" %></div>
      </div>
    </div>

    <!-- Employees & Payroll -->
    <div class="subbar">EMPLOYEES & PAYROLL</div>
    <div class="block">
      <div class="row">
        <div class="cell label w25">FULL-TIME EMPLOYEES</div>
        <div class="cell w25"><%= data.wc_employees_ft || "" %></div>
        <div class="cell label w25">PART-TIME EMPLOYEES</div>
        <div class="cell w25"><%= data.wc_employees_pt || "" %></div>
      </div>
      <div class="row">
        <div class="cell label w25">EST. ANNUAL PAYROLL</div>
        <div class="cell w25 right"><%= helpers.money(data.wc_annual_payroll || "") %></div>
        <div class="cell label w25">&nbsp;</div>
        <div class="cell w25">&nbsp;</div>
      </div>
    </div>

    <!-- Notes (optional, future-ready) -->
    <div class="subbar">NOTES</div>
    <div class="block">
      <div class="row">
        <div class="cell w100" style="min-height:64px;"></div>
      </div>
    </div>
  </div>
</body>
</html>

